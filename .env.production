# 生产环境配置
NODE_ENV=production

# 数据库连接 - 生产环境 (远程 MongoDB)
DATABASE_URL="mongodb://root:g987phj6@dbconn.sealosgzg.site:47094/nuxt-fullstack-prod?directConnection=true"

# 认证密钥 - 生产环境 (必须使用强密钥)
AUTH_SECRET="your-super-secure-production-auth-key-256-bits-random"

# 应用配置 - 生产环境
NUXT_PUBLIC_APP_NAME="Nuxt 全栈应用"
NUXT_PUBLIC_TRPC_BASE_URL="https://your-domain.com"
NUXT_PUBLIC_API_BASE_URL="https://your-domain.com/api"

# 安全配置
NUXT_SECURITY_ENABLED=true
NUXT_SSL_REDIRECT=true

# 性能配置
NUXT_TELEMETRY_DISABLED=true
NUXT_OPTIMIZATION_ENABLED=true

# 邮件服务 - 生产环境
SMTP_HOST="smtp.your-provider.com"
SMTP_PORT=587
SMTP_USER="your-email@domain.com"
SMTP_PASS="your-email-password"
SMTP_TLS=true

# Redis 缓存 - 生产环境
REDIS_URL="redis://username:password@production-redis-host:6379"

# 文件上传 - 生产环境
UPLOAD_MAX_SIZE=5242880
UPLOAD_ALLOWED_TYPES="image/jpeg,image/png,image/gif"

# CDN 配置
CDN_URL="https://cdn.your-domain.com"

# 监控配置
SENTRY_DSN="https://your-sentry-dsn@sentry.io/project-id"
ANALYTICS_ID="your-analytics-id"

# 日志级别
LOG_LEVEL="error"

# 备份配置
BACKUP_ENABLED=true
BACKUP_INTERVAL="0 2 * * *"  # 每天凌晨2点备份 